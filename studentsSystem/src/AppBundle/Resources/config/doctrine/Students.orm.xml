<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Students" table="students">
    <indexes>
      <index name="student_course_id" columns="student_course_id"/>
      <index name="student_speciality_id" columns="student_speciality_id"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="student_email_UNIQUE" columns="student_email"/>
      <unique-constraint name="student_name_fn_UNIQUE" columns="student_fname,student_lname,student_fnumber"/>
    </unique-constraints>
    <id name="studentId" type="integer" column="student_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="studentCourseId" type="integer" column="student_course_id" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">ИД на курса, в който е записан студента</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="studentSpecialityId" type="integer" column="student_speciality_id" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="studentFname" type="string" column="student_fname" length="45" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Собствено име на студента</option>
      </options>
    </field>
    <field name="studentLname" type="string" column="student_lname" length="45" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Фамилия на студента</option>
      </options>
    </field>
    <field name="studentEmail" type="string" column="student_email" length="64" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">E-mail адрес на студента</option>
      </options>
    </field>
    <field name="studentFnumber" type="integer" column="student_fnumber" nullable="true">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">Факултетен номер на студента</option>
        <option name="default">0000000000</option>
      </options>
    </field>
    <field name="studentEducationForm" type="string" column="student_education_form" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
