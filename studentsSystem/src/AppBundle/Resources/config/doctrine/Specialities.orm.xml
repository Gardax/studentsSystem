<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Specialities" table="specialities">
    <unique-constraints>
      <unique-constraint name="speciality_name_long_UNIQUE" columns="speciality_name_long"/>
      <unique-constraint name="speciality_name_short_UNIQUE" columns="speciality_name_short"/>
    </unique-constraints>
    <id name="specialityId" type="integer" column="speciality_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="specialityNameLong" type="string" column="speciality_name_long" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Име на специалността (пълно)</option>
      </options>
    </field>
    <field name="specialityNameShort" type="string" column="speciality_name_short" length="16" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Име на специалността (кратко)</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
