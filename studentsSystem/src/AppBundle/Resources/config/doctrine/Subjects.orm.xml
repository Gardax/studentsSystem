<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Subjects" table="subjects">
    <unique-constraints>
      <unique-constraint name="subject_name_UNIQUE" columns="subject_name"/>
    </unique-constraints>
    <id name="subjectId" type="integer" column="subject_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="subjectName" type="string" column="subject_name" length="45" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Име на предмет</option>
      </options>
    </field>
    <field name="subjectWorkloadLectures" type="smallint" column="subject_workload_lectures" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">Хорариум часове за лекции</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="subjectWorkloadExercises" type="smallint" column="subject_workload_exercises" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">Хорариум часове за упражнения</option>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
